<p style="color: green"><%= notice %></p>

<% if user_signed_in? %>

  <h1>Boardgames</h1>

  <table class="table table-striped table-success">
      <thead>
        <th>Title</th>
        <th>Price</th>
        <th>Author</th>
        <th>Rating</th>
        <th>User Id</th>
        <th> </th>
      </thead>
      <tbody>
        <% @boardgames.each do |boardgame| %>
          <% if boardgame.user == current_user%>
          <tr>
            <td><%= boardgame.title %></td>
            <td><%= boardgame.price %></td>
            <td><%= boardgame.author%></td>
            <td><%= boardgame.rating%></td>
            <td><%= boardgame.user_id%></td>
            <td>
              <%= link_to "Show this boardgame", boardgame, class:"btn btn-secondary" %>
            </td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
  </table>

  <%= link_to "New boardgame", new_boardgame_path, class:"btn btn-secondary" %>

<% else %>

<h1>Hello world</h1>
<p>Project voor ITalent</p>

<% end %>